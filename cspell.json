{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "language": "en",
  "import": [
    "@cspell/dict-python/cspell-ext.json",
    "@cspell/dict-software-terms/cspell-ext.json",
    "@cspell/dict-data-science/cspell-ext.json"
  ],
  "words": [
    "specio",
    "colorimetry",
    "colorimeter",
    "colorimeters",
    "spectrometer",
    "spectrometers",
    "spectroradiometer",
    "spectroradiometers",
    "chromaticity",
    "chromaticities",
    "illuminant",
    "illuminants",
    "tristimulus",
    "wavelength",
    "wavelengths",
    "reflectance",
    "transmittance",
    "radiance",
    "irradiance",
    "luminance",
    "chromaticity",
    "colorspace",
    "colorspaces",
    "gamut",
    "Konica",
    "Minolta",
    "Colorimetry",
    "pyserial",
    "protobuf",
    "bidict",
    "aenum",
    "pyproject",
    "pyright",
    "pytest",
    "csmf",
    "docstrings",
    "dataclass",
    "dtype",
    "ndarray",
    "ascontiguousarray",
    "ctypes",
    "contextlib",
    "contextmanager",
    "argtypes",
    "restype",
    "meshgrid",
    "arange"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/.venv/**",
    "**/.git/**",
    "**/build/**",
    "**/dist/**",
    "**/__pycache__/**",
    "**/.pytest_cache/**",
    "**/.ruff_cache/**",
    "**/protobuf/*_pb2.py",
    "**/protobuf/*_pb2.pyi",
    "**/.memories/**",
    "**/junk/**",
    "**/data/**"
  ],
  "ignoreRegExpList": [
    "\\b[A-F0-9]{8}\\b",
    "\\b0x[A-Fa-f0-9]+\\b"
  ]
}